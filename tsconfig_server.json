    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist/server",
    "baseUrl": ".",
    "paths": {
      "*": [
        "/node_modules/*"
      ]
    }
  },
  "include": [ "src/server/*" ]
}